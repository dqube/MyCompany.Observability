{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "System": "Information",
      "Microsoft": "Information"
    }
  },
  "Observability": {
    "LogLevel": "Debug",
    "ServiceAttributes": {
      "environment": "development",
      "component": "api"
    },
    "Exporter": {
      "EnableConsole": true,
      "EnableOtlp": false
    },
    "RequestResponseLogging": {
      "LogRequestHeaders": true,
      "LogResponseHeaders": true,
      "LogRequestBody": true,
      "LogResponseBody": true
    }
  }
}
